<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#D31C1C1C">
        <TextView
            android:id="@+id/tv_cb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reroll loadout"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cb_headset"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_headset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="Headset"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tv_cb_title"
            app:layout_constraintBottom_toTopOf="@id/cb_headwear"
            app:layout_constraintStart_toStartOf="parent"
            />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_headwear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="Headwear"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/cb_headset"
            app:layout_constraintBottom_toTopOf="@id/cb_eyewear"
            app:layout_constraintStart_toStartOf="parent"
            />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_eyewear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="Eyewear"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/cb_eyewear"
            app:layout_constraintBottom_toTopOf="@id/cb_rig"
            app:layout_constraintStart_toStartOf="parent"
            />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_rig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="Rig"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/cb_eyewear"
            app:layout_constraintBottom_toTopOf="@id/cb_armor"
            />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_armor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="Armor"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/cb_rig"
            app:layout_constraintBottom_toTopOf="@id/cb_facecover"
            />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_facecover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="Facecover"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/cb_armor"
            app:layout_constraintBottom_toTopOf="@id/cb_weapon"
            />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_weapon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="Weapon"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/cb_facecover"
            app:layout_constraintBottom_toTopOf="@id/cb_backpack"
            />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_backpack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="Backpack"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/cb_weapon"
            app:layout_constraintBottom_toTopOf="@id/btn_reroll_accept"
            />
        <Button
            android:id="@+id/btn_reroll_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Reroll"
            android:backgroundTint="@android:color/holo_green_light"
            app:layout_constraintTop_toBottomOf="@id/cb_backpack"
            app:layout_constraintStart_toEndOf="@id/btn_reroll_cancel"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_reroll_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Cancel"
            android:backgroundTint="@android:color/holo_red_light"
            app:layout_constraintTop_toBottomOf="@id/cb_backpack"
            app:layout_constraintEnd_toStartOf="@id/btn_reroll_accept"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>